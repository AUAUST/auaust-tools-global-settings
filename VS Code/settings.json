  "colorful-comments.tags": [
    {
      "tag": "!",
      "color": "#bc4b4b",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "?",
      "color": "#696cfc",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "//",
      "color": "#818192",
      "strikethrough": true,
      "backgroundColor": "transparent"
    },
    {
      "tag": "AUAUST",
      "color": "#efeff5",
      "strikethrough": false,
      "backgroundColor": "#170049"
    },
    {
      "tag": "* useGlobal",
      "color": "#efeff5",
      "strikethrough": false,
      "backgroundColor": "#170049"
    },
    {
      "tag": "* useLocal",
      "color": "#efeff5",
      "strikethrough": false,
      "backgroundColor": "#170049"
    },
    {
      "tag": "todo",
      "color": "#ffffff",
      "strikethrough": false,
      "backgroundColor": "#f79f57"
    }
  ],
