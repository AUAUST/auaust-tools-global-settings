    "editorBracketHighlight.unexpectedBracket.foreground": "#f47d78",
    "editorOverviewRuler.background": "#171719",
    "editorOverviewRuler.border": "#61616f",
    // Colors
    "editorError.foreground": "#bc4b4b",
    "editorError.background": "#bc4b4b61",
    "editorWarning.foreground": "#f79f57",
    "editorWarning.background": "#f79f5761",
    // Gutter
    "editorGutter.addedBackground": "#7fff7f61",
    "editorGutter.modifiedBackground": "#f79f5761",
    "editorGutter.deletedBackground": "#f47d7861"
